<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/color_white"
    tools:context=".Activity.Activity_board_write">

    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@drawable/s_toyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/top_logo">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_sky" />

            <ImageView
                android:id="@+id/iv_boardwrite_img"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/imageview_round"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>


            <EditText
                android:id="@+id/et_board_content"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="4dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:hint="게시글 작성란"
                android:textColor="@color/color_dark"
                android:textSize="15sp"
                android:background="@drawable/imageview_round"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"/>


    </LinearLayout>



    <Button
        android:id="@+id/bt_board_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_ypup"
        android:text="사진첨부"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/top_logo" />

    <Button
        android:id="@+id/bt_board_write_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sky"
        android:text="게시하기"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/top_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>