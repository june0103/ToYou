<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.Activity_board_write">

    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@drawable/s_toyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/top_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_board_read_proimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/tv_board_read_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="고준"
                android:textColor="@color/color_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_sky" />

        <TextView
            android:id="@+id/tv_board_read_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="7월21일 **시**분"
            android:textColor="@color/color_dark"
            android:textSize="15sp" />




            <ImageView
                android:id="@+id/iv_board_read_img"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/heart"
                android:layout_marginTop="10dp"
                android:clickable="true"/>


            <TextView
                android:id="@+id/tv_board_read_text"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="오늘또한 집가고싶어"
                android:textColor="@color/color_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:scrollbars="vertical"/>


    </LinearLayout>



    <Button
        android:id="@+id/bt_board_read_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_ypup"
        android:text="수 정"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/top_logo" />

    <Button
        android:id="@+id/bt_board_read_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_sign"
        android:text="나가기"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_board_read_delete"
        app:layout_constraintStart_toEndOf="@+id/bt_board_read_update" />

    <Button
        android:id="@+id/bt_board_read_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sky"
        android:text="삭 제"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/top_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>